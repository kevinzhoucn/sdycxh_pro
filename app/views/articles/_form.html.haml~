= form_for @article do |f|
  - if @article.errors.any?
    #error_explanation
      %h2= "#{pluralize(@article.errors.count, "error")} prohibited this article from being saved:"
      %ul
        - @article.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title, "标题"
    %br
    = f.text_field :title
  .field
    = f.label :content, "内容"
    %br
    = cktext_area :content, ckeditor: { uiColor: '#AADC6E', toolbar: 'mini'}
  .field
    = f.label :category_id, "类别"
    %br
    = f.select :category_id, @categories.map{ |c| [c.name, c.id] }, prompt: "选择类别"
  .field
    = f.label :sub_category_id, "下拉菜单"
    %br
    = f.select :sub_category_id, @sub_categories.map{ |c| [c.name, c.id] }, prompt: "选择下拉菜单"
  .field
    = f.label :published, "是否发布"
    = f.check_box :published
  .actions
    = f.submit '保存'
