<%= simple_form_for( [:admin, @article], :html => { :class => 'span8 form-horizontal well'  }) do |f| %>
  <%= f.input :title, label: "标题" || t('.article_title')  %><br />
  <%#= f.cktext_area :body, label: "内容" || t('.article_content') %><br />
  <div>
    <%= f.label :content, "内容" %>
    <%= f.text_area :content, label: "内容", cols: 50 %><br /> 
  </div>
  <%= f.association :category, label: "父级分类" || t('.article_category'), include_blank: false, prompt: "选择类别" %>  
  <%= f.association :sub_category, label: "子级分类" || t('.article_category'), include_blank: false, prompt: "选择子类别"%>  
  <%= f.input :published, label: "发布" || t('.published') %>
  <%= f.submit "保存" || t('.save'), :class => "btn btn-primary" %>
  <%= link_to '取消', admin_articles_path, :class => "btn btn-info" %>
<% end %>