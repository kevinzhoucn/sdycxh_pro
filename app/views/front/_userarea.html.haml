.span35{style: "display:inline-block;"}
  .panel.panel-danger
    .panel-heading{style: "background-image: linear-gradient(to bottom, red, #d83030);color:white;font-weight:bold"} 用户登录
    .panel-body
      %form.form-horizontal{role: "form"}
        .form-group
          %label.col-sm-2.control-label{for: "inputUser", style: "padding-right: 0px"} 用户
          .col-sm-10
            %input.form-control{id: "inputUser", type: "email", style: "width: 60%"}
        .form-group
          %label.col-sm-2.control-label{style: "padding-right: 0px"} 密码
          .col-sm-10
            %input.form-control{type: "password", style: "padding-right: 0px;width: 60%"}
        .form-group
          .col-sm-offset-2.col-sm-10
            %button.form-control.btn.btn-danger.btn-sm{type: "submit", style: "width: 20%"} 登录
      %hr{style: "color:black"}
      %form.form-inline{role: "form"}
        .form-group
          %label.col-sm-2.control-label{for: "inputUser"} 
          %input.form-control{type: "email", id: "search", placeholder: "搜索内容", style: "width: 80%"}
        .form-group
          %button.btn.btn-default.btn-sm{type: "submit"} 提交
      %div{style: "margin-bottom: 50px"}
