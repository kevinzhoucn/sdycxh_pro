<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : t('.title') %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag "application" %>    
    <%= javascript_include_tag "application" %>
    <link href="<%= root_url %>css/bootstrap.min.css" rel="stylesheet">
    <link href="<%= root_url %>css/bootstrap-theme.min.css" rel="stylesheet">
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
    <style type="text/css">
      ul.dropdown li a:hover {
        background-color: #FF948B;
      }
    </style>
  </head>
  <body style="max-width:1138px;margin:auto">
    <div class="topbar">
      <div class="fill">
        <div class="container">
          <%= render :partial => 'common/menu' %>
        </div>
      </div>
    </div>
    <div class="container">
<!--       <div class="content">
        <div class="page-header">
          <%#= render :partial => 'common/header' %>
        </div> -->
        <div class="row">
          <div class="span12">            
            <%= yield %>
          </div>
        </div>
        <footer>
        <%= render :partial => 'common/footer/footer' %>
        </footer>        
        <script src="<%= root_url %>js/jquery-1.11.0.min.js"></script>
        <script src="<%= root_url %>js/bootstrap.min.js"></script>
        <script language="javascript">
          $(document).ready(function() {
            $('.dropdown-toggle').dropdown();
          })
        </script>
      </div>
    </div>
  </body>
</html>