.span3.well.tablecolor
  %table.plist
    %tr
      %th{style: "width:60%"} 类别
      %th{style: "width:40%"}

    - @categories.each do |category|
      %tr
        %td= category.name
        %td
          = link_to '查看', category
          = link_to '修改', edit_category_path(category)
          = link_to '删除', category, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Category', new_category_path